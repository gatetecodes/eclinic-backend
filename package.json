{
  "name": "eclinic-backend",
  "version": "1.0.0",
  "description": "eClinic Backend API - Bun + Hono.js + Better-Auth",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "db:generate": "bunx prisma generate",
    "db:push": "bunx prisma db push",
    "db:migrate": "bunx prisma migrate dev",
    "db:seed": "bunx prisma db seed",
    "test": "bun test",
    "lint": "bunx eslint src --ext .ts",
    "format": "bunx prettier --write src",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@eslint/js": "^9.35.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "ultracite": "5.3.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.16.0",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.9",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "hono": "^4.9.6",
    "hono-rate-limiter": "^0.4.2",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.16.0",
    "rate-limiter-flexible": "^7.3.0",
    "resend": "^6.0.3",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.5"
  }
}
